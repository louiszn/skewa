{
	"compilerOptions": {
		"lib": ["ES2023"],
		"module": "Node16",
		"target": "ES2024",
		"moduleResolution": "node16",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"preserveConstEnums": true
	},
	"include": ["src/**/*.ts", "tests/**/*.test.ts"],
	"exclude": ["node_modules"]
}
